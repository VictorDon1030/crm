<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.crm.mapper.MinTypeMapper">
  <resultMap id="BaseResultMap" type="cn.wolfcode.crm.domain.MinType">
    <id column="id" property="id" />
    <result column="name" property="name" />
  </resultMap>
  <delete id="deleteByPrimaryKey">
    delete from mintype
    where id = #{id}
  </delete>
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into mintype (name)
    values (#{name})
  </insert>
  <update id="updateByPrimaryKey">
    update mintype
    set name = #{name}
    where id = #{id}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select id, name
    from mintype
    where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, name
    from mintype
  </select>

  <!--通过大分类的id来查询对应的所有小分类-->
  <select id="selectByMaxTypeId" resultMap="BaseResultMap">
    select name from mintype where maxtype_id=#{id}
  </select>
</mapper>